1) Largest in Array
Time complexity : O(n)
Space compelxity : O(1)

int largest(vector<int>& arr){
     int n=arr.size();
     int maxi=INT_MIN;

     for(int i=0;i<n;i++){
         if(maxi<arr[i])
         maxi=arr[i];
     }
     return maxi;
}

2) Second largest element in array without sorting
Time compelxity : O(n)
Space complexity : O(1);

int getSecondLargest(vector<int>& arr){
    int n=arr.size();
    int first=INT_MIN;
    int second=INT_MIN;

    for(int i=0;i<n;i++){
        if(second<arr[i] && first>arr[i]){
           second=arr[i];
        }else if(first<arr[i])
           first=arr[i];
     }
     return second;
}

3) Check if array is sorted
Time complexity : O(n)
Space complexity : O(1)

bool isSorted(vector<int>& arr){
     int n=arr.size();

     for(int i=1;i<n;i++){
         if(arr[i]<arr[i-1])
         return false;
     }
     return true;
}
